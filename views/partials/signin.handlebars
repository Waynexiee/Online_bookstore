{{#if messages}}
	<p class="error">{{messages}}</p>
{{/if}}
<h1>Log In</h1>
<main>
	<form action="/users/login" method="POST" id="login-form">
		<label for="username">
			USERNAME:
		</label>
		<input type="text" id="username" name="username"/>

		<label for="password">
			PASSWORDS:
		</label>
		<input type="password" id="password" name="password"/>
		<div>
			<button type="submit">Log In</button>
		</div>
	</form>
	<div>
		<a href="/users/password_reset">Forget Password</a>
	</div>
  <div>
		<a href="/users/login_sms">Log in using SMS</a>
	</div>
</main>