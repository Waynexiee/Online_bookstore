{{#if messages}}
	<p class="error">{{messages}}</p>
{{/if}}
<h1>Upload new book</h1>
<main>
	<form action="/admin/" method="POST" id="login-form">
		<div class="form-group">
			<label for="title" class="col-sm-2 col-form-label">
				TITLE:
			</label>
			<input type="text" id="title" name="title" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="price" class="col-sm-2 col-form-label">
				PRICE:
			</label>
			<input type="number" id="price" name="price" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="author" class="col-sm-2 col-form-label">
				AUTHOR:
			</label>
			<input type="text" id="author" name="author" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="stock" class="col-sm-2 col-form-label">
				STOCK:
			</label>
			<input type="number" id="stock" name="stock" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="picture_url" class="col-sm-2 col-form-label">
				PICTURE_URL:
			</label>
			<input type="url" id="picture_url" name="picture_url" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="description" class="col-sm-2 col-form-label">
				DESCRIPTION:
			</label>
			<textarea id="description" name="description" form="login-form" rows="4" cols="50" class="col-sm-10">Enter text here...</textarea>
		</div>

		<button type="submit">Submit</button>
	</form>
</main>