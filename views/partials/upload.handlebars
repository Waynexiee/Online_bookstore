{{#if messages}}
	<p class="error">{{messages}}</p>
{{/if}}
<h1>Upload new book</h1>
<main>
	<form action="/admin/" method="POST" id="login-form">
		<div class="form-group">
			<label for="title">
				TITLE:
			</label>
			<input type="text" id="title" name="title"/>
		</div>
		<div class="form-group">
			<label for="price">
				PRICE:
			</label>
			<input type="number" id="price" name="price"/>
		</div>
		<div class="form-group">
			<label for="author">
				AUTHOR:
			</label>
			<input type="text" id="author" name="author"/>
		</div>
		<div class="form-group">
			<label for="stock">
				STOCK:
			</label>
			<input type="number" id="stock" name="stock"/>
		</div>
		<div class="form-group">
			<label for="picture_url">
				PICTURE_URL:
			</label>
			<input type="url" id="picture_url" name="picture_url"/>
		</div>
		<div class="form-group">
			<label for="description">
				DESCRIPTION:
			</label>
			<textarea id="description" name="description" form="login-form" rows="4" cols="50">Enter text here...</textarea>
		</div>
		<button type="submit">Submit</button>
	</form>
</main>