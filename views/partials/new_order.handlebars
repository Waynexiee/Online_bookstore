{{#if messages}}
	<p class="error">{{messages}}</p>
{{/if}}
<h1>Check Out</h1>
<main>
	<form action="/order" method="POST">
		<div class="form-group">
			<label for="receiver" class="col-sm-2 col-form-label">
				Reciever:
			</label>
			<input type="text" id="receiver" name="receiver" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="address" class="col-sm-2 col-form-label">
				Address:
			</label>
			<input type="text" id="address" name="address" class="col-sm-10"/>
		</div>
		<div class="form-group">
			<label for="payment" class="col-sm-2 col-form-label">
				Payment:
			</label>
			<select class="" id="payment" name="payment">
				<option>Credit Card</option>
				<option>Paypal</option>
				<option>Check</option>
			</select>
		</div>
		<button type="submit">Submit</button>
	</form>
</main>